{
	"id": "ListItem.json",
	"title": "List Item",
	"description": "An list item, e.g. a step in a checklist or how-to description.",
	"format": "http://fibo.sdo-fibo.appspot.com/ListItem",
	"media": {"type": "application/json;profile=http://fibo.sdo-fibo.appspot.com/ListItem"},
	"allOf": [{"$ref": "Intangible.json"}],
	"type": "object",
	"properties": {
		"item": {"$ref": "Thing.json#/definitions/possibleRefArray"},
		"nextItem": {"$ref": "ListItem.json#/definitions/possibleRefArray"},
		"position": {"$ref": "#/definitions/position"},
		"previousItem": {"$ref": "ListItem.json#/definitions/possibleRefArray"}
	},
	"definitions": {
		"array": {
			"type": "array",
			"items": {"$ref": "#"}
		},
		"possibleRef": {
			"oneOf": [
				{"$ref": "#"},
				{
					"type": "string",
					"format": "uri",
					"links": [{
						"rel": "full",
						"href": "{+$}"
					}]
				}
			]
		},
		"possibleRefArray": {
			"oneOf": [
				{
					"type": "string",
					"format": "uri",
					"links": [{
						"rel": "full",
						"href": "{+$}"
					}]
				},
				{
					"type": "array",
					"items": {"$ref": "#/definitions/possibleRef"}
				}
			]
		},
		"position": {
			"title": "Position",
			"description": "The position of an item in a series or sequence of items.",
			"anyOf": [{"type": "integer"}, {"type": "string"}]
		}
	}
}